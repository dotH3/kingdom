---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

export const getStaticPaths = (async () => {
  const posts = await getCollection('posts');
  return posts
    .filter(post => !post.data.draft)
    .map((post) => ({
      params: { slug: post.data.postSlug },
      props: { post },
    }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.desc}>
  <article>
    <header style="margin-bottom: 2rem;">
      <h1>{post.data.title}</h1>
      <p style="color: var(--accent); font-size: 0.95rem; margin-bottom: 0.5rem;">
        {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </p>
      {post.data.tags.length > 0 && (
        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; margin-top: 0.5rem;">
          {post.data.tags.map((tag) => (
            <span style="background: var(--accent); color: var(--bg); padding: 0.25rem 0.5rem; border-radius: 3px; font-size: 0.85rem;">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>
    
    <div style="background: var(--card-bg); border: 1px solid var(--border); padding: 2rem; border-radius: 8px;">
      <Content />
    </div>
    
    <div style="margin-top: 2rem;">
      <a href="/kingdom/" style="font-size: 0.95rem;">&larr; Back to home</a>
    </div>
  </article>
</BaseLayout>
